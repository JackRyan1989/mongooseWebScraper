<div class="container">
    <div class="row jumbo col-lg-12 d-block">
        <div class="jumbotron">
            <h1 class='mainHeading'></h1>
            <h1 class='mainHeading'>Locals Only</h1>
            <h2 class='subHeading'>Comment on Local Doings and Happenings</h2>
        </div>
    </div>
    <div class="row mainContent d-block">
        <div class="col-8 articles">
            <h3>Latest Doins'</h3>
            {{#article}}
            <div class='card'>
                <div class="card-body p-2">
                    <h4 class="card-title"><a href={{this.link}}>{{this.title}}</a></h4>
                </div>
                <div class="row p-2">
                    <div class='card-text col-12 my-2'>
                        <h5>Banter</h5>
                        <button class='btn btn-sm btn-primary commBtn my-2' id={{this.id}}>Comment</button>
                        <div class='comments' id={{this.id}}>
                        </div>
                    </div>
                    {{#if comment}}
                    {{#each comment}}
                    <div class='my-3 card-text col-12 putCommentsHere'>
                        {{this.user}} said {{this.body}}
                        <button class="btn btn-sm btn-danger m-2 deleteBtn" data-id={{this}}>Delete Comment</button>
                    </div>
                    {{/each}}
                    {{/if}}
                </div>
            </div>
            {{/article}}

        </div>
    </div>
</div>